{
  "name": "kodme",
  "version": "1.0.0",
  "private": true,
  "description": "Kodme - A programming environment for kids",
  "scripts": {
    "dev": "pnpm -r --filter @kodme/* --parallel run dev",
    "build": "pnpm -r --filter @kodme/* run build",
    "build:core": "pnpm --filter @kodme/core run build",
    "watch:core": "pnpm --filter @kodme/core run build --watch",
    "build:cli": "pnpm --filter @kodme/cli run build",
    "dev:cli": "pnpm --filter @kodme/cli run start",
    "lint": "eslint . --ext .ts,.js,.svelte",
    "format": "prettier --write ."
  },
  "keywords": [
    "education",
    "programming",
    "kids",
    "typescript",
    "svelte"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.10.0",
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.0.0"
  }
}
